{
  "name": "shiraha-monorepo",
  "type": "module",
  "version": "0.0.1-alpha.0",
  "private": true,
  "scripts": {
    "build": "turbo run build && pnpm -rF shiraha-docs cp",
    "changeset": "changeset",
    "dev": "turbo run dev",
    "dev:ve": "run-p dev:ve:package dev:ve:docs",
    "dev:ve:docs": "pnpm -rF shiraha-docs-ve dev",
    "dev:ve:package": "pnpm -rF shiraha-ve dev",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "preinstall": "npx -y only-allow pnpm",
    "release": "pnpm build && pnpm -rF \"./packages/**\" publish --no-git-checks --access public"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@importantimport/eslint-config": "^0.2.0",
    "@importantimport/eslint-config-ts": "^0.2.0",
    "@importantimport/eslint-config-vanilla-extract": "^0.2.0",
    "@importantimport/tsconfig": "^0.0.1",
    "@material/material-color-utilities": "^0.2.7",
    "@types/node": "^20.9.0",
    "@vanilla-extract/css": "^1.14.0",
    "@vanilla-extract/css-utils": "^0.1.3",
    "@vanilla-extract/esbuild-plugin": "^2.3.1",
    "@vanilla-extract/recipes": "^0.5.1",
    "@vanilla-extract/sprinkles": "^1.6.1",
    "@vanilla-extract/vite-plugin": "^3.9.1",
    "browserslist": "^4.22.1",
    "eslint": "^8.53.0",
    "fast-glob": "^3.3.2",
    "lightningcss": "^1.22.1",
    "npm-run-all": "^4.1.5",
    "open-props": "^1.6.11",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-custom-media": "^10.0.2",
    "postcss-import": "^15.1.0",
    "postcss-import-ext-glob": "^2.1.1",
    "postcss-jit-props": "^1.0.14",
    "postcss-lightningcss": "^1.0.0",
    "postcss-mixins": "^9.0.4",
    "postcss-prune-var": "^1.1.1",
    "stylelint": "^15.11.0",
    "stylelint-config-clean-order": "^5.2.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.3",
    "sugarss": "^4.0.1",
    "tsup": "^7.2.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2",
    "vite": "5.0.0-beta.20",
    "vite-plugin-dts": "^3.6.3",
    "vite-plugin-eslint": "^1.8.1",
    "vitepress": "1.0.0-rc.25",
    "vitest": "^0.34.6"
  }
